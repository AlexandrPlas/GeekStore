@model GeekStore.Models.RedactViewModels.AddProductViewModel
@{
    ViewData["Title"] = "Добавить товар";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-9">
        
            @using (Html.BeginForm("AddProduct", "Redact", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <dl class="dl-horizontal">
                    @Html.ValidationSummary()
                    <dt>@Html.LabelFor(model => model.Name)</dt>
                    <dd>@Html.EditorFor(model => model.Name)</dd>

                    <dt>@Html.LabelFor(model => model.Price)</dt>
                    <dd>@Html.EditorFor(model => model.Price)</dd>

                    <dt>@Html.LabelFor(model => model.Count)</dt>
                    <dd>@Html.EditorFor(model => model.Count)</dd>

                    <dt>@Html.LabelFor(model => model.manId, "Производитель")</dt>
                    <dd>@Html.DropDownListFor(model => model.manId, ViewBag.Man as SelectList)</dd>


                    <dt>@Html.LabelFor(model => model.catId, "Категория")</dt>
                    <dd>@Html.DropDownListFor(model => model.catId, ViewBag.Cat as SelectList)</dd>


                    <dt>@Html.LabelFor(model => model.Description)</dt>
                    <dd>@Html.TextAreaFor(model => model.Description)</dd>


                    <dt>@Html.LabelFor(model => model.Images, "Загрузите файлы")</dt>
                    <dd>@Html.EditorFor(model => model.Images)</dd>
                </dl>
                <button type="submit" class="btn btn-default">Добавить</button>
            }
        
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
