@model IEnumerable<Manufacture>
@{
    ViewData["Title"] = "Список производителей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="AddManufacture">Добавить производителя</a>
<table class="table">
    <tr><td>Логотип</td><td>Наименование</td><td>Описание</td><td></td></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@if (item.Logo != null)
            {
                <img style='width:60px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Logo))" />
            }</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a asp-action="EditManufacture" asp-controller="Redact" asp-route-id="@item.Id">Изменить</a></td>
            <td><a asp-action="DeleteManufacture" asp-controller="Redact" asp-route-id="@item.Id">Удалить</a></td>
        </tr>
    }
</table>

