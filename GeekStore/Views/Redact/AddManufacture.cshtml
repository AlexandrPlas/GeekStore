@model GeekStore.Models.RedactViewModels.AddManufactureViewModel
@{
    ViewData["Title"] = "Добавить производителя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">

        @using (Html.BeginForm("AddManufacture", "Redact", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <dl class="dl-horizontal">
                @Html.ValidationSummary()
                <dt>@Html.LabelFor(model => model.Name)</dt>
                <dd>@Html.EditorFor(model => model.Name)</dd>

                <dt>@Html.LabelFor(model => model.Description)</dt>
                <dd>@Html.TextAreaFor(model => model.Description)</dd>

                <dt>@Html.LabelFor(model => model.Logo)</dt>
                <dd>@Html.EditorFor(model => model.Logo)</dd>

            </dl>
            <button type="submit" class="btn btn-default">Добавить</button>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
