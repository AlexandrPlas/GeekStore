@model GeekStore.Models.RedactViewModels.AddCategoryViewModel
@{
    ViewData["Title"] = "Добавить категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("AddCategory", "Redact", FormMethod.Post))
        {
            <dl class="dl-horizontal">

                @Html.ValidationSummary()
                <dt>@Html.LabelFor(model => model.Name)</dt>
                <dd>@Html.EditorFor(model => model.Name)</dd>



                <dt>@Html.LabelFor(model => model.Hierarchy)</dt>
                <dd>@Html.EditorFor(model => model.Hierarchy)</dd>



            </dl>
            <button type="submit" class="btn btn-default">Добавить</button>
        }
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
