@model GeekStore.Models.RedactViewModels.AddCategoryViewModel
@{
    ViewData["Title"] = "Добавить категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("AddCategory", "Redact", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Hierarchy)
                @Html.EditorFor(model => model.Hierarchy)
            </div>

            <button type="submit" class="btn btn-default">Добавить</button>
        }
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
