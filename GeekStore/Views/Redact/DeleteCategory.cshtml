@model Category
@{
    ViewData["Title"] = "Удалить категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Иерархия</dt>
        <dd>
            @Html.DisplayFor(model => model.Hierarchy)
        </dd>

        <dt>Активность</dt>
        <dd>
            @Html.DisplayFor(model => model.Availability)
        </dd>

    </dl>

    <div>
        <form asp-controller="Redact" asp-action="DeleteCategory" method="post">
            <div class="form-group">
                <button type="submit" class="btn btn-default">Удалить</button>
            </div>
        </form>
    </div>
</div>
