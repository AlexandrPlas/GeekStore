@model Product
@{
    ViewData["Title"] = "Удалить товар";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>Количество на складе</dt>
        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>

        <dt>Категория</dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>Производитель</dt>
        <dd>
            @Html.DisplayFor(model => model.Manufacture.Name)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>Изображения</dt>
        <dd>
            @if (Model.Images.Count > 0)
            {
                @foreach (Image img in Model.Images)
                {
                    <img style='width:400px; height:400px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(img.Picture))" />
                }
            }
        </dd>

    </dl>

    <div>
        <form asp-controller="Redact" asp-action="DeleteProduct" method="post">
            <div class="form-group">
                <button type="submit" class="btn btn-default">Удалить</button>
            </div>
        </form>
    </div>
</div>
