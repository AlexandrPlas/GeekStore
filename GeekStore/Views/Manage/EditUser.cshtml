@using Microsoft.AspNetCore.Identity
@model GeekStore.Models.ManageViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Редактирование пользователей";
    Layout = "~/Views/Manage/_Layout.cshtml";
}

<form asp-action="EditUser" asp-controller="Manage">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>

