@model OrderProduct
@{
    ViewData["Title"] = "Удалить товар из корзины";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Товар</dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>

        <dt>В количестве</dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
    <form asp-controller="Store" asp-action="DeleteProductInOrder" method="post">
        <div class="form-group">
            <button type="submit" class="btn btn-default">Удалить товар</button>
        </div>
    </form>
</div>

