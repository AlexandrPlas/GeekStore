@model Product
@{
    ViewData["Title"] = "Обзор товара";
    Layout = "~/Views/Store/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>Количество на складе</dt>
        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>

        <dt>Категория</dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>Производитель</dt>
        <dd>
            <a asp-controller="Store" asp-action="DetailManufacture" asp-route-id="@Model.ManufactureId">@Model.Manufacture.Name</a>
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>Изображения</dt>
        <dd>
            @if (Model.Images.Count > 0)
            {
                @foreach (Image img in Model.Images)
                {
                    <img style='width:400px; height:400px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(img.Picture))" />
                }
            }
        </dd>

    </dl>

    <div>
        <a asp-controller="Store" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-default">Оформить заказ</a>
    </div>
</div>
