@model Manufacture
@{
    ViewData["Title"] = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">

        <dd>
            @if (Model.Logo != null)
            {
                <img style='width:400px; height:400px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Logo))" />
            }
        </dd>

        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <h2>Товары производителя</h2>
        @if (Model.Products.Count > 0)
        {
        <ul>
            @foreach (var product in Model.Products)
            {
                <li><a asp-controller="Store" asp-action="Detail" asp-route-id="@product.Id">@product.Name</a></li>
            }
        </ul>
        }
        </dd>
    </dl>
</div>


